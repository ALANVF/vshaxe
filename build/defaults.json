{
    "haxelibs": [
        {
            "name": "hxnodejs",
            "installArgs": ["git", "hxnodejs", "https://github.com/HaxeFoundation/hxnodejs"]
        },
        {
            "name": "jstack",
            "installArgs": ["install", "jstack"]
        }
    ],
    "targets": [
        {
            "name": "empty"
        },
        {
            "name": "vshaxe-node",
            "debugArgs": {
                "defines": "js_unflatten",
                "haxelibs": ["jstack"]
            },
            "displayArgs": {
                "classPaths": ["build"]
            },
            "haxelibs": ["hxnodejs"]
        }
    ]
}