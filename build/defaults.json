{
    "haxelibs": [
        {
            "name": "hxnodejs",
            "installArgs": ["git", "hxnodejs", "https://github.com/HaxeFoundation/hxnodejs"]
        },
        {
            "name": "jstack",
            "installArgs": ["install", "jstack"]
        },
        {
            "name": "json2object",
            "installArgs": ["git", "json2object", "https://github.com/elnabo/json2object"]
        }
    ],
    "targets": [
        {
            "name": "empty"
        },
        {
            "name": "vshaxe-node",
            "debugArgs": {
                "defines": ["js_unflatten"],
                "haxelibs": ["jstack"]
            },
            "displayArgs": {
                "classPaths": ["build"],
                "haxelibs": ["json2object"],
                "output": {
                    "target": "js",
                    "path": "dummy.js"
                }
            },
            "haxelibs": ["hxnodejs"]
        }
    ]
}