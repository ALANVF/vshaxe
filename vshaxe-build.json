{
	"inherit": "vshaxe-node",
	"mainTarget": "all",
	"targets": [
		{
			"name": "all",
			"composite": true,
			"targetDependencies": [
				"test",
				"formatter-schema",
				"tm-language"
			]
		},
		{
			"name": "test",
			"composite": true,
			"targetDependencies": [
				"vshaxe",
				"language-server-tests"
			],
			"args": {
				"debug": true
			}
		},
		{
			"name": "vshaxe",
			"composite": true,
			"targetDependencies": [
				"client",	
				"language-server",
				"eval-debugger"
			]
		},
		{
			"name": "client",
			"releaseAfterBuildCommands": [
				["npx", "ncc", "build", "bin/index.js", "-o", "bin", "-m", "-q"]
			],
			"args": {
				"haxelibs": [
					"vscode",
					"vscode-json-rpc",
					"language-server-protocol"
				],
				"classPaths": [
					"server/shared",
					"src",
					"haxelib/src"
				],
				"defines": [
					"JSTACK_MAIN=vshaxe.Main.main",
					"JSTACK_ASYNC_ENTRY",
					"JSTACK_NO_SHUTDOWN"
				],
				"macros": [
					"nullSafety('vshaxe')"
				],
				"output": {
					"target": "js",
					"path": "bin/index.js"
				},
				"packageName": "vshaxe.Main"
			}
		},
		{
			"name": "formatter-schema",
			"inherit": "empty",
			"args": {
				"haxelibs": [
					"formatter",
					"json2object"
				],
				"classPaths": [
					"schemas"
				],
				"main": "SchemaGenerator",
				"output": {
					"target": "interp"
				},
				"debug": true
			}
		},
		{
			"name": "integration-tests",
			"composite": true,
			"targetDependencies": [
				"integration-tests-suite",
				"integration-tests-runner"
			],
			"afterBuildCommands": [
				["node", "test/runner.js"]
			]
		},
		{
			"name": "integration-tests-suite",
			"args": {
				"haxelibs": [
					"vscode",
					"utest"
				],
				"classPaths": [
					"test/suite"
				],
				"packageName": "Main",
				"output": {
					"target": "js",
					"path": "test/suite/main.js"
				}
			}
		},
		{
			"name": "integration-tests-runner",
			"args": {
				"classPaths": [
					"test",
					".haxelib/vscode-test/1,4,0"
				],
				"main": "Runner",
				"output": {
					"target": "js",
					"path": "test/runner.js"
				}
			}
		},
		{
			"name": "install",
			"inherit": "empty",
			"args": {
				"main": "Install",
				"output": {
					"target": "interp"
				}
			}
		},
		{
			"name": "build-and-install",
			"composite": true,
			"targetDependencies": [
				"vshaxe",
				"install"
			]
		}
	]
}