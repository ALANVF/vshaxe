{
	"inherit": "vshaxe-node",
	"mainTarget": "all",
	"haxelibs": [
		{
			"name": "json-rpc",
			"installArgs": ["git", "json-rpc", "https://github.com/vshaxe/json-rpc"]
		}
	],
	"targets": [
		{
			"name": "all",
			"composite": true,
			"targetDependencies": [
				"test",
				"tm-language"
			]
		},
		{
			"name": "test",
			"composite": true,
			"targetDependencies": [
				"vshaxe",
				"language-server-tests"
			],
			"args": {
				"debug": true
			}
		},
		{
			"name": "vshaxe",
			"composite": true,
			"targetDependencies": [
				"client",
				"language-server",
				"eval-debugger"
			]
		},
		{
			"name": "client",
			"installCommands": [
				["npm", "install"]
			],
			"args": {
				"haxelibs": ["json-rpc"],
				"classPaths": [
					"vscode-extern/src",
					"server/src",
					"server/protocol/src",
					"src",
					"src-api"
				],
				"defines": [
					"JSTACK_MAIN=vshaxe.Main.main",
					"JSTACK_ASYNC_ENTRY",
					"JSTACK_NO_SHUTDOWN"
				],
				"macros": [
					"nullSafety('vshaxe')"
				],
				"output": {
					"target": "js",
					"path": "bin/client.js"
				},
				"packageName": "vshaxe.Main"
			}
		}
	]
}