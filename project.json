{
    "inherit": "vshaxe-node",
    "haxelibs": [
        {
            "name": "hxargs",
            "installArgs": ["install", "hxargs"]
        },
        {
            "name": "haxe-hxparser",
            "installArgs": ["git", "haxe-hxparser", "https://github.com/vshaxe/haxe-hxparser"]
        },
        {
            "name": "compiletime",
            "installArgs": ["install", "compiletime"]
        },
        {
            "name": "mockatoo",
            "installArgs": ["git", "mockatoo", "https://github.com/grosmar/mockatoo", "master", "src"]
        },
        {
            "name": "mconsole",
            "installArgs": ["install", "mconsole"]
        },
        {
            "name": "yaml",
            "installArgs": ["install", "yaml"]
        },
        {
            "name": "plist",
            "installArgs": ["git", "plist", "https://github.com/back2dos/plist"]
        }
    ],
    "targets": [
        {
            "name": "all",
            "targetDependencies": [
                "test",
                "tm-language"
            ]
        },
        {
            "name": "test",
            "targetDependencies": [
                "vshaxe",
                "language-server-tests",
                "formatter"
            ],
            "debug": true,
            "isTestCommand": true
        },
        {
            "name": "vshaxe",
            "targetDependencies": [
                "client",
                "language-server"
            ],
            "isBuildCommand": true
        },
        {
            "name": "client",
            "installCommands": [
                ["npm", "install"]
            ],
            "classPaths": [
                "vscode-extern/src",
                "src"
            ],
            "defines": [
                "hxnodejs-no-version-warning",
                "analyzer-optimize",
                "JSTACK_MAIN=vshaxe.Main.main"
            ],
            "output": {
                "target": "js",
                "path": "bin/client.js"
            },
            "args": [
                "-dce", "full",
                "vshaxe.Main"
            ]
        },
        {
            "name": "language-server",
            "haxelibs": ["haxe-hxparser"],
            "workingDirectory": "server",
            "classPaths": [
                "src",
                "protocol/src",
                "formatter/src"
            ],
            "defines": [
                "hxnodejs-no-version-warning"
            ],
            "output": {
                "target": "js",
                "path": "../bin/server.js"
            },
            "args": [
                "-main", "haxeLanguageServer.Main",
                "-dce", "full"
            ]
        },
        {
            "name": "language-server-tests",
            "haxelibs": ["haxe-hxparser", "compiletime", "mockatoo", "mconsole"],
            "workingDirectory": "server",
            "classPaths": [
                "src",
                "test",
                "protocol/src",
                "formatter/src"
            ],
            "defines": [
                "hxnodejs-no-version-warning"
            ],
            "output": {
                "target": "js",
                "path": "../bin/test.js"
            },
            "args": [
                "-main", "TestMain",
                "-dce", "full",
                "--no-inline"
            ],
            "afterBuildCommands": [
                ["node", "../bin/test.js"]
            ],
            "debug": true
        },
        {
            "name": "tm-language",
            "targetDependencies": [
                "tm-language-conversion",
                "tm-language-tests"
            ],
            "debug": true
        },
        {
            "inherit": "empty",
            "name": "tm-language-conversion",
            "haxelibs": ["yaml", "plist"],
            "workingDirectory": "syntaxes",
            "classPaths": [
                "src"
            ],
            "output": {
                "target": "neko",
                "path": "bin/convert.n"
            },
            "args": [
                "-main", "Converter"
            ],
            "afterBuildCommands": [
                ["neko", "bin/convert.n"]
            ],
            "debug": true
        },
        {
            "name": "tm-language-build-tests",
            "workingDirectory": "syntaxes",
            "installCommands": [
                ["npm", "install", "vscode-textmate"]
            ],
            "classPaths": [
                "src"
            ],
            "output": {
                "target": "js",
                "path": "bin/build.js"
            },
            "args": [
                "-main", "Build"
            ],
            "afterBuildCommands": [
                ["node", "bin/build.js"]
            ],
            "debug": true
        },
        {
            "name": "tm-language-tests",
            "workingDirectory": "syntaxes",
            "targetDependencies": [
                "tm-language-build-tests"
            ],
            "classPaths": [
                "src"
            ],
            "output": {
                "target": "js",
                "path": "bin/test.js"
            },
            "args": [
                "-main", "Test"
            ],
            "afterBuildCommands": [
                ["node", "bin/test.js"]
            ],
            "debug": true
        },
        {
            "name": "formatter",
            "targetDependencies": [
                "formatter-cli",
                "formatter-tests"
            ]
        },
        {
            "name":  "formatter-cli",
            "haxelibs": ["haxe-hxparser", "hxargs"],
            "workingDirectory": "server/formatter",
            "classPaths": [
                "src"
            ],
            "output": {
                "target": "js",
                "path": "bin/cli.js"
            },
            "args": [
                "-main", "haxeFormatter.Cli"
            ]
        },
        {
            "name": "formatter-tests",
            "haxelibs": ["haxe-hxparser"],
            "workingDirectory": "server/formatter",
            "classPaths": [
                "src",
                "test"
            ],
            "output": {
                "target": "js",
                "path": "bin/test.js"
            },
            "args": [
                "-main", "haxeFormatter.TestMain"
            ],
            "afterBuildCommands": [
                ["node", "bin/test.js"]
            ],
            "debug": true
        }
    ]
}