{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/bin/*.js"
			]
		},
		{
			"name": "Attach to Server",
			"type": "node",
			"request": "attach",
			"port": 6504,
			"protocol": "inspector",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/server/bin/*.js"
			]
		},
		{
			"name": "Server Unit Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/server/bin/test.js",
			"cwd": "${workspaceFolder}/server/bin",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/server/bin/*.js"
			],
			"preLaunchTask": {
				"type": "vshaxe-build",
				"target": "language-server-tests"
			}
		},
		{
			"name": "Eval Debugger",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--nolazy"
			],
			"program": "${workspaceFolder}/eval-debugger/bin/adapter.js",
			"cwd": "${workspaceFolder}/eval-debugger",
			"stopOnEntry": false,
			"args": [
				"--server=4711"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/eval-debugger/bin/*.js"
			]
		},
		{
			"name": "Integration Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/test/suite/main.js"
			],
			
			"preLaunchTask": "vshaxe-build: integration-tests"
		}
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Launch Extension", "Attach to Server"]
		}
	]
}